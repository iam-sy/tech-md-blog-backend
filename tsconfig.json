{
  "compilerOptions": {
    "rootDirs": ["src"],
    "baseUrl": "./src",
    "outDir": "dist",
    "lib": ["es2020"],
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "types": ["node"]
  },
  "ts-node": {
    "esm": true,
  },
  "include": [
    "src/**/*.ts",
    "spec/**/*.ts",
    "build.ts"
  ],
  "exclude": [
    "src/public/"
  ]
}